<div class='container-fluid'>
  <div class='row'>
    <div class='col-lg-8 col-lg-offset-3 page'>
      <%= @html %>
    </div>
  </div>
</div>

<div class='editor-container'>
  <div id='editor' class='editor'>
    <form action='/' method='post'>
      <span id='maximize' class='glyphicon glyphicon-plus-sign pull-right min-max maximize'></span>
      <span id='minimize' class='glyphicon glyphicon-minus-sign pull-right min-max minimize'></span>
      <button type="submit" class="btn btn-default save-button">
        <span class="glyphicon glyphicon-floppy-save"></span>
        Save
      </button>
      <textarea id="myTextarea" name='html'><%= @html %></textarea>
    </form>
  </div>
</div>
