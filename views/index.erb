<%= @html %>

<div class='editor-container'>
  <div id='editor' class='editor'>
    <form action='/' method='post'>
      <span class='glyphicon glyphicon-plus-sign pull-right maximize'></span>
      <span class='glyphicon glyphicon-minus-sign pull-right minimize'></span>
      <button type="submit" class="btn btn-default save-button">
        <span class="glyphicon glyphicon-floppy-save"></span> Save</button>
      <textarea id="myTextarea" name='html'><%= @html %></textarea>
    </form>
  </div>
</div>
